<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:orientation="vertical"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">

            <TextView
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ sơ"
                android:textColor="#000000"
                android:textSize="38sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/settings"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/caidat" />
        </LinearLayout>


    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_weight="19"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <RelativeLayout

        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/image_hoso"
            android:layout_below="@id/rela1"
            app:riv_corner_radius="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/nhung4"
            android:layout_marginTop="@dimen/_5sdp"
            tools:ignore="NotSibling" />

        <RelativeLayout
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@id/image_hoso"
            android:id="@+id/user_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                    <TextView

                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/user_infor"
                        android:id="@+id/user_hoso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hiếu Thành"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/dauphay3"
                        android:layout_toRightOf="@id/user_hoso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=","
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/age_hoso"
                        android:layout_toRightOf="@id/dauphay3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

            <RelativeLayout

                android:layout_below="@id/age_hoso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Chọn ảnh để xem hồ sơ của bạn"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_60sdp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_weight="8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/credit"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/daucong"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <TextView
                    android:textColor="#F000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:text="Mua credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginRight="50dp"
            android:layout_marginLeft="90dp"
            android:background="#e6e6e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_weight="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/gold"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/daucong"
                        android:layout_width="30dp"
                        android:layout_height="30dp"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:textColor="#F000"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center_vertical"
                        android:text="Kích hoạt Dating Gold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>