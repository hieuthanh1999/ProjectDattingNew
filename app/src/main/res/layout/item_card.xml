<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.cardview.widget.CardView
    android:id="@+id/cardview"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@android:color/white">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout

        android:weightSum="10"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/gradation_black">
        <LinearLayout
            android:id="@+id/infor"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:text="Hieeus ThÃ nh"
            android:layout_gravity="center"
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="26sp"/>
        <LinearLayout

            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="right"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:id="@+id/item_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_gioitinh"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_width="50dp"
                android:layout_height="15dp">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/girl1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:text="14"
                    android:id="@+id/item_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="6"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
                <ImageView
                    android:layout_weight="1"
                    android:background="@drawable/icon_thoat"
                    android:layout_width="80dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:background="@drawable/tym"
                    android:layout_width="80dp"
                    android:layout_height="100dp"/>
                <ImageView
                    android:layout_weight="1"
                    android:background="@drawable/icon_no_tym"
                    android:layout_width="80dp"
                    android:layout_height="100dp"/>


        </LinearLayout>

    </LinearLayout>

