<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:id="@+id/bottonSheets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:background ="#00000000"
    app:cardCornerRadius="@dimen/_10sdp"
  >
    <RelativeLayout
        android:layout_marginTop="@dimen/_50sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="5dp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/thanhh"
            app:riv_corner_radius="@dimen/_10sdp" />

        <LinearLayout
        android:layout_marginTop="@dimen/_330sdp"
        android:weightSum="2"
        android:layout_marginBottom="10sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp"
        android:background="@drawable/gradation_black">

        <TextView
            android:text="Thanhh"
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />
        <LinearLayout
            android:weightSum="4"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Ha Noi"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:id="@+id/item_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_gioitinh"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="50dp"
                    android:layout_height="15dp">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/girl1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="14"
                        android:id="@+id/item_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/icon_thoat"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/tym"
                android:layout_width="0dp"
                android:layout_height="100dp"/>
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/icon_no_tym"
                android:layout_width="0dp"
                android:layout_height="100dp"/>


        </LinearLayout>

    </LinearLayout>

